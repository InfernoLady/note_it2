<div class="note-index">
  <% @notes.each do |note| %>
    <h3>
      <%= link_to note.title, note %>
    </h3>
    <p>
      <%= note.content %>
    </p>
    <p>
      <%= note.created_at %>
    </p>
    <p>
      <%= time_ago_in_words(note.created_at) + ' ago' %>
    </p>
  <% end %>
</div>


